pipeline {
    agent any

    tools {
        jdk 'JDK21'
        maven 'Maven3'
    }

    environment {
        JAVA_HOME = 'C:\\Java\\jdk-21'
        PATH = "${env.JAVA_HOME}\\bin;${env.PATH}"
        MAVEN_OPTS = "-Xms256m -Xmx512m"
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the repository
                git url: 'https://github.com/fnfldx/automationtest.git', branch: 'main'
            }
        }

        stage('Environment Info') {
            steps {
                // Print Java and Maven versions to verify
                bat 'java -version'
                bat 'mvn -version'
            }
        }

        stage('Compile') {
            steps {
                // Run Maven clean compile test-compile excluding Cucumber module
                bat 'mvn clean compile test-compile -pl ui-automation-test-store'
            }
        }

        stage('Integration Test') {
            steps {
                // Run Maven failsafe:integration-test
                bat 'mvn failsafe:integration-test -pl ui-automation-test-store'
            }
        }

        stage('Allure Report') {
            steps {
                // Generate Allure report
                bat 'mvn allure:report -pl ui-automation-test-store'
            }
        }
    }

    post {
        always {
            junit 'target/failsafe-reports/*.xml'
        }

        failure {
            // Notify on failure
            mail to: 'kuba.krzysiek96@gmail.com',
                 subject: "Failed Pipeline: ${currentBuild.fullDisplayName}",
                 body: "Something is wrong with ${env.JOB_NAME} - ${env.BUILD_NUMBER}. Please check."
        }
    }
}